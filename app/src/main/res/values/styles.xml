<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="linear_vertical_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ActivityMainStyle" parent="linear_vertical_match">
        <item name="android:background">@color/background_forms</item>
    </style>

    <style name="ActivityHeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="activity_header_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_gravity">center_vertical</item>
<!--        <item name="android:layout_marginBottom">@dimen/padding_8</item>-->
        <item name="titleTextAppearance">@style/top_text</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="activity_main_header">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="top_text">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:titleTextColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="button_activity_main" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineSpotShadowColor">#00FFFFFF</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/menu_icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="bt_menu_search" parent="button_activity_main">
        <item name="icon">@drawable/ic_search</item>
    </style>

    <style name="bt_menu_media" parent="button_activity_main">
        <item name="icon">@drawable/ic_media</item>
    </style>

    <style name="bt_menu_setting" parent="button_activity_main">
        <item name="icon">@drawable/ic_setting</item>
    </style>

    <style name="button_activity_setting" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_20</item>
        <item name="android:paddingTop">@dimen/padding_20</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineSpotShadowColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu_text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconTint">@color/grey</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/menu_icon_padding</item>
    </style>

    <style name="button_activity_swith">
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_20</item>
        <item name="android:paddingTop">@dimen/padding_20</item>
        <item name="android:outlineSpotShadowColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/menu_text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="switchMinWidth">35dp</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>
    
    <style name="search_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_36</item>
        <item name="android:background">@drawable/rounded_search_text</item>

        <item name="android:layout_marginStart">@dimen/padding_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_16</item>
        <item name="android:layout_marginTop">@dimen/menu_icon_padding</item>
        <item name="android:layout_marginBottom">@dimen/menu_icon_padding</item>

        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_36</item>
        <item name="android:paddingTop">@dimen/menu_icon_padding</item>
        <item name="android:paddingBottom">@dimen/menu_icon_padding</item>

        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:drawablePadding">@dimen/menu_icon_padding</item>

        <item name="android:gravity">center_vertical</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/padding_16</item>
    </style>

    <style name="track_style_name">
        <item name="android:textSize">@dimen/track_size_name</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="track_style_name_color" parent="track_style_name">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_style_art_time">
        <item name="android:textSize">@dimen/track_size_art_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="track_style_art_color" parent="track_style_art_time">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="track_style_button_forward">
        <item name="android:layout_width">@dimen/padding_8</item>
        <item name="android:layout_height">@dimen/padding_16</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
    </style>

    <style name="track_style_button_forward_color" parent="track_style_button_forward">
        <item name="tint">@color/grey</item>
    </style>

    <style name="placeholder_error_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="placeholder_error_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_16</item>
    </style>

    <style name="placeholder_error_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="placeholder_error_text_color" parent="placeholder_error_text">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="placeholder_button_update">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="cornerRadius">@dimen/btn_corner_radius_placeholder</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="placeholder_button_update_color" parent="placeholder_button_update">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>





</resources>