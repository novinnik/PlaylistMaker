<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlist_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_playlist"
        android:layout_width="@dimen/padding_160"
        android:layout_height="@dimen/padding_160"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_16"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners_8"
        tools:src="@drawable/ic_placeholder"
        />

    <LinearLayout
        android:layout_width="@dimen/padding_160"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_4"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_playlist"
            style="@style/text_view_playlist_color"
            tools:text="@string/name_playlist" />

        <TextView
            android:id="@+id/count_playlist"
            style="@style/text_view_playlist_color"
            tools:text="@string/count_tracks" />
    </LinearLayout>


</LinearLayout>