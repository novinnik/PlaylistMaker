<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlist_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_8">

    <ImageView
        android:id="@+id/image_playlist"
        android:layout_width="@dimen/padding_0"
        android:layout_height="@dimen/padding_0"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corners_8"
        tools:src="@drawable/ic_placeholder_playlist"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/title_playlist"
            style="@style/text_view_playlist_color"
            android:layout_marginTop="@dimen/padding_8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_playlist"
            tools:text="@string/name_playlist"/>

        <TextView
            android:id="@+id/count_playlist"
            style="@style/text_view_playlist_color"
            android:layout_marginTop="@dimen/padding_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_playlist"
            tools:text="@string/count_tracks" />



</androidx.constraintlayout.widget.ConstraintLayout>