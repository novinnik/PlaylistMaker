<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media.ui.FavoritesFragment">

    <ImageView
        android:id="@+id/error_image_fragment_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:visibility="visible"
        android:src="@drawable/ic_placeholder_nothing"
        />

    <TextView
        android:id="@+id/error_message_fragment_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16"
        android:text="@string/no_media"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:visibility="visible"
        android:textColor="@color/media_text"
        android:textSize="20sp"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="400"
        />

</LinearLayout>