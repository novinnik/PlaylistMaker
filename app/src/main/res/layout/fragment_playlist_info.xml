<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    tools:context=".media.playlists.ui.activity.PlaylistInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline_playlist"
            style="@style/player_guideline.vertical"
            app:layout_constraintGuide_begin="@dimen/padding_16" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline_playlist"
            style="@style/player_guideline.vertical"
            app:layout_constraintGuide_end="@dimen/padding_16" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginBottom="@dimen/padding_16"
            android:background="@null"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="@id/left_guideline_playlist"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_arrow_back"/>

        <ImageView
            android:id="@+id/playlist_image"
            android:layout_width="@dimen/padding_0"
            android:layout_height="@dimen/padding_0"
            android:clickable="true"
            android:contentDescription="@string/player_image_album_description"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_placeholder_info" />

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_24"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_bold"
            android:maxLines="1"
            android:textColor="@color/yp_black"
            android:textFontWeight="700"
            android:textSize="@dimen/text_size_24"
            app:layout_constraintEnd_toStartOf="@id/right_guideline_playlist"
            app:layout_constraintStart_toEndOf="@id/left_guideline_playlist"
            app:layout_constraintTop_toBottomOf="@id/playlist_image"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/playlist_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"

            android:maxLines="1"
            android:textColor="@color/yp_black"
            android:textFontWeight="400"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/right_guideline_playlist"
            app:layout_constraintStart_toEndOf="@id/left_guideline_playlist"
            app:layout_constraintTop_toBottomOf="@id/playlist_name"
            tools:text="2022" />

        <LinearLayout
            android:id="@+id/info_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/left_guideline_playlist"
            app:layout_constraintTop_toBottomOf="@id/playlist_description">

            <TextView
                android:id="@+id/all_time_tracks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/yp_black"
                android:textFontWeight="400"
                android:textSize="18sp"
                tools:text="300 минут" />

            <TextView
                android:id="@+id/all_count_tracks"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="@color/yp_black"
                android:textFontWeight="400"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/ic_comm"
                tools:text="98 треков" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/left_guideline_playlist"
            app:layout_constraintTop_toBottomOf="@id/info_tracks">

            <ImageButton
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:backgroundTint="@color/light_grey"
                android:contentDescription="@string/share"
                android:src="@drawable/ic_share"
                app:tint="@color/yp_black"/>

            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_grey"
                android:contentDescription="@string/menu"
                android:src="@drawable/ic_more"
                app:layout_constraintStart_toEndOf="@id/btn_share"
                app:layout_constraintTop_toBottomOf="@id/info_tracks"
                app:tint="@color/yp_black" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/btm_sheet_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheep_background"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="266dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="52dp"
            android:layout_height="@dimen/padding_4"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_8"
            android:background="@drawable/rounder_rectangle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/btm_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/search_track_view" />

        <TextView
            android:id="@+id/tv_no_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_12"
            android:gravity="center"
            android:text="@string/no_tracks_in_playlist"
            android:visibility="gone" />
    </LinearLayout>

<!--    <View-->
<!--        android:id="@+id/overlay"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="#99000000"-->
<!--        android:visibility="gone" />-->

    <LinearLayout
        android:id="@+id/btm_sheet_btn_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheep_background"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="52dp"
            android:layout_height="@dimen/padding_4"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_8"
            android:background="@drawable/rounder_rectangle" />

        <LinearLayout
            android:id="@+id/info_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_playlist"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="@dimen/padding_12"
                android:layout_marginVertical="@dimen/padding_8"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_playlist"
                    style="@style/track_style_name_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Playlist name" />

                <TextView
                    android:id="@+id/count_playlist"
                    style="@style/track_style_art_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="0 tracks" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/share_playlist"
            style="@style/button_btmsheet_info_playlist"
            android:text="@string/share"/>

        <Button
            android:id="@+id/edit_info_playlist"
            style="@style/button_btmsheet_info_playlist"
            android:text="@string/edit_info"/>

        <Button
            android:id="@+id/delete_playlist"
            style="@style/button_btmsheet_info_playlist"
            android:text="@string/delete_playlist"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>