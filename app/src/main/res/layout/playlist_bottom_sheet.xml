<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlist_view_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_playlist"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/padding_12"
        android:layout_marginVertical="@dimen/padding_8"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_placeholder"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/track_style_name_color"
            tools:text="Playlist name" />

        <TextView
            android:id="@+id/count_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/track_style_art_color"
            android:maxLines="1"
            tools:text="0 tracks" />
    </LinearLayout>


</LinearLayout>